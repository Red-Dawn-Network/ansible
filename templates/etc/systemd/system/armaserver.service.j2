[Unit]
Description=Arma Reforger Server
After=network-online.target
Wants=network-online.target

[Service]
Type=forking
User={{ linuxgsm_user }}
WorkingDirectory={{ linuxgsm_home }}
#Assume that the service is running after main process exits with code 0
RemainAfterExit=yes
ExecStart={{ linuxgsm_home }}/armarserver start
ExecStop={{ linuxgsm_home }}/armarserver stop
Restart=no

[Install]
WantedBy=multi-user.target
